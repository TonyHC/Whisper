<%- include('partials/header') %>

<div class="login-form text-center">
  <main class="card form-signin">
    <form action="/login" method="POST">
      <h1 class="h3 mb-3 fw-normal">Login</h1>

      <div class="form-floating">
        <input type="email" class="form-control" id="floatingInput" name="username">
        <label for="floatingInput">Email address</label>
      </div>
      <div class="form-floating">
        <input type="password" class="form-control" id="floatingPassword" name="password">
        <label for="floatingPassword">Password</label>
      </div>

      <p class="sign-up-text">Don't have an account? <a href="/register">Sign Up</a></p>

      <button class="w-100 btn btn-lg btn-primary sign-in" type="submit">Sign in</button>

      <a class="btn btn-google" href="/auth/google" role="button">
        <i class="fab fa-google"></i>
        Sign In with Google
      </a>
    </form>
  </main>
</div>

<%- include('partials/footer') %>