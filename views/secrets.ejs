<%- include('partials/header') %>

<div class="text-center">
  <div class="container mt-5">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">You've Discovered My Secret!</h1>
      <% usersWithSecrets.forEach(function(userSecret) { %>
        <p class="secret-text"><%=userSecret.secret %></p>
      <% }) %>
    <hr>
    
    <a class="btn btn-secondary btn-lg" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
  </div>
</div>

